@{
    ViewData["Title"] = "دعوات زفاف رقمية";
}

<div class="landing">
    <!-- Background -->
    <div class="landing-bg">
        <div class="bg-base"></div>
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
        <div class="grain"></div>
    </div>

    <!-- Hero -->
    <section class="hero">
        <div class="hero-inner">
            <!-- Badge -->
            <div class="hero-badge" data-animate>
                <span class="badge-dot"></span>
                <span>دعوات زفاف رقمية</span>
            </div>
            
            <!-- Main Title -->
            <h1 class="hero-title" data-animate>
                <span class="title-line">اصنع دعوة</span>
                <span class="title-line title-accent">زفافك الخاصة</span>
            </h1>
            
            <!-- Subtitle -->
            <p class="hero-desc" data-animate>
                تصاميم أنيقة وتفاعلية لمشاركة فرحتك مع من تحب
            </p>
            
            <!-- CTA -->
            <a href="/create" class="hero-cta" data-animate>
                <span class="cta-text">ابدأ الآن</span>
                <span class="cta-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </span>
            </a>
            
            <!-- Trust -->
            <div class="hero-trust" data-animate>
                <span>✨</span>
                <span>مجاني • بدون تسجيل • سهل الاستخدام</span>
            </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="scroll-indicator">
            <span class="scroll-line"></span>
        </div>
    </section>

    <!-- Features -->
    <section class="features">
        <div class="features-inner">
            <div class="features-header">
                <span class="section-tag">المميزات</span>
                <h2 class="section-title">لماذا تختارنا؟</h2>
            </div>
            
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">🎨</div>
                    <h3>تصاميم فريدة</h3>
                    <p>تصاميم عصرية وأنيقة مع رسوم متحركة جذابة</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">⚡</div>
                    <h3>سريع وسهل</h3>
                    <p>أنشئ دعوتك في أقل من دقيقتين</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">📱</div>
                    <h3>متوافق مع الجوال</h3>
                    <p>تصميم متجاوب يعمل على جميع الأجهزة</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">🎵</div>
                    <h3>موسيقى خلفية</h3>
                    <p>أضف لمسة موسيقية لدعوتك من يوتيوب</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Steps -->
    <section class="steps-section">
        <div class="steps-inner">
            <div class="steps-header">
                <span class="section-tag">الخطوات</span>
                <h2 class="section-title">كيف تبدأ؟</h2>
            </div>
            
            <div class="steps-track">
                <div class="step-item">
                    <div class="step-num">1</div>
                    <div class="step-content">
                        <span class="step-emoji">🎨</span>
                        <h3>اختر التصميم</h3>
                        <p>تصفح مجموعة التصاميم واختر ما يناسب ذوقك</p>
                    </div>
                </div>
                
                <div class="step-connector"></div>
                
                <div class="step-item">
                    <div class="step-num">2</div>
                    <div class="step-content">
                        <span class="step-emoji">✏️</span>
                        <h3>أدخل التفاصيل</h3>
                        <p>أضف بيانات حفلك مع معاينة مباشرة للنتيجة</p>
                    </div>
                </div>
                
                <div class="step-connector"></div>
                
                <div class="step-item">
                    <div class="step-num">3</div>
                    <div class="step-content">
                        <span class="step-emoji">📤</span>
                        <h3>شارك الدعوة</h3>
                        <p>احصل على رابط فريد وشاركه مع المدعوين</p>
                    </div>
                </div>
            </div>
            
            <a href="/create" class="steps-cta">
                <span>ابدأ إنشاء دعوتك</span>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </section>
</div>

@section Styles {
<style>
    /* ══════════════════════════════════════════════════════════════
       LANDING BASE
       ══════════════════════════════════════════════════════════════ */
    .landing {
        min-height: 100vh;
        font-family: 'Noto Naskh Arabic', 'Cairo', sans-serif;
    }

    /* ══════════════════════════════════════════════════════════════
       BACKGROUND
       ══════════════════════════════════════════════════════════════ */
    .landing-bg {
        position: fixed;
        inset: 0;
        z-index: 0;
        overflow: hidden;
    }

    .bg-base {
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, #05050a 0%, #0a080f 50%, #0d0a12 100%);
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(120px);
        animation: orbMove 30s ease-in-out infinite;
    }

    .orb-1 {
        width: 600px;
        height: 600px;
        background: rgba(212, 175, 55, 0.12);
        top: -20%;
        right: -15%;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: rgba(180, 140, 180, 0.08);
        bottom: 10%;
        left: -10%;
        animation-delay: -10s;
    }

    .orb-3 {
        width: 300px;
        height: 300px;
        background: rgba(212, 175, 55, 0.06);
        top: 60%;
        right: 20%;
        animation-delay: -20s;
    }

    @@keyframes orbMove {
        0%, 100% { transform: translate(0, 0); }
        33% { transform: translate(50px, -40px); }
        66% { transform: translate(-30px, 30px); }
    }

    .grain {
        position: absolute;
        inset: 0;
        opacity: 0.02;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    }

    /* ══════════════════════════════════════════════════════════════
       HERO
       ══════════════════════════════════════════════════════════════ */
    .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 10;
        padding: 4rem 2rem;
    }

    .hero-inner {
        text-align: center;
        max-width: 600px;
    }

    /* Badge */
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.6rem 1.2rem;
        background: rgba(212, 175, 55, 0.08);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 100px;
        font-size: 0.85rem;
        color: #D4AF37;
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeUp 0.8s ease 0.2s forwards;
    }

    .badge-dot {
        width: 8px;
        height: 8px;
        background: #D4AF37;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    /* Title */
    .hero-title {
        margin: 0 0 1.5rem;
    }

    .title-line {
        display: block;
        font-family: 'Aref Ruqaa Ink', 'Amiri', serif;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        font-weight: 700;
        color: #fff;
        line-height: 1.2;
        opacity: 0;
        animation: fadeUp 0.8s ease 0.3s forwards;
    }

    .title-accent {
        background: linear-gradient(135deg, #fff 0%, #D4AF37 40%, #fff 100%);
        background-size: 200% auto;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: fadeUp 0.8s ease 0.4s forwards, textShine 6s linear infinite;
    }

    @@keyframes textShine {
        0% { background-position: 200% center; }
        100% { background-position: -200% center; }
    }

    /* Description */
    .hero-desc {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.8;
        margin-bottom: 2.5rem;
        opacity: 0;
        animation: fadeUp 0.8s ease 0.5s forwards;
    }

    /* CTA */
    .hero-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.1rem 2.5rem;
        background: linear-gradient(135deg, #D4AF37 0%, #B8860B 100%);
        color: #0a0a0f;
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 100px;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.25);
        opacity: 0;
        animation: fadeUp 0.8s ease 0.6s forwards;
    }

    .hero-cta:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 25px 60px rgba(212, 175, 55, 0.35);
    }

    .cta-icon {
        display: flex;
        transition: transform 0.3s ease;
    }

    .hero-cta:hover .cta-icon {
        transform: translateX(-4px);
    }

    /* Trust */
    .hero-trust {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.4);
        opacity: 0;
        animation: fadeUp 0.8s ease 0.7s forwards;
    }

    /* Scroll Indicator */
    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
    }

    .scroll-line {
        display: block;
        width: 1px;
        height: 40px;
        background: linear-gradient(180deg, #D4AF37, transparent);
        animation: scrollPulse 2s ease-in-out infinite;
    }

    @@keyframes scrollPulse {
        0%, 100% { opacity: 1; transform: scaleY(1); }
        50% { opacity: 0.5; transform: scaleY(0.6); }
    }

    @@keyframes fadeUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* ══════════════════════════════════════════════════════════════
       FEATURES
       ══════════════════════════════════════════════════════════════ */
    .features {
        position: relative;
        z-index: 10;
        padding: 6rem 2rem;
    }

    .features-inner {
        max-width: 1000px;
        margin: 0 auto;
    }

    .features-header,
    .steps-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(212, 175, 55, 0.08);
        border: 1px solid rgba(212, 175, 55, 0.15);
        border-radius: 100px;
        font-size: 0.8rem;
        color: #D4AF37;
        margin-bottom: 1rem;
    }

    .section-title {
        font-family: 'Aref Ruqaa Ink', 'Amiri', serif;
        font-size: 2.5rem;
        color: #fff;
        margin: 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
    }

    .feature-card {
        padding: 2rem;
        background: rgba(18, 16, 24, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        text-align: center;
        transition: all 0.4s ease;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        border-color: rgba(212, 175, 55, 0.2);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        font-size: 1.1rem;
        color: #fff;
        margin: 0 0 0.5rem;
    }

    .feature-card p {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
        margin: 0;
        line-height: 1.6;
    }

    /* ══════════════════════════════════════════════════════════════
       STEPS
       ══════════════════════════════════════════════════════════════ */
    .steps-section {
        position: relative;
        z-index: 10;
        padding: 6rem 2rem;
        background: linear-gradient(180deg, transparent 0%, rgba(212, 175, 55, 0.02) 50%, transparent 100%);
    }

    .steps-inner {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
    }

    .steps-track {
        display: flex;
        align-items: flex-start;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 4rem;
        flex-wrap: wrap;
    }

    .step-item {
        flex: 1;
        min-width: 200px;
        max-width: 280px;
        position: relative;
    }

    .step-num {
        width: 40px;
        height: 40px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #D4AF37, #B8860B);
        color: #0a0a0f;
        font-family: 'Aref Ruqaa Ink', serif;
        font-size: 1.25rem;
        font-weight: 700;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .step-content {
        padding: 1.5rem;
        background: rgba(18, 16, 24, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
    }

    .step-emoji {
        font-size: 2rem;
        display: block;
        margin-bottom: 0.75rem;
    }

    .step-content h3 {
        font-size: 1.1rem;
        color: #fff;
        margin: 0 0 0.5rem;
    }

    .step-content p {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        margin: 0;
        line-height: 1.6;
    }

    .step-connector {
        width: 40px;
        height: 2px;
        background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.3), transparent);
        margin-top: 60px;
        flex-shrink: 0;
    }

    .steps-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 1rem 2rem;
        background: transparent;
        border: 2px solid rgba(212, 175, 55, 0.5);
        color: #D4AF37;
        text-decoration: none;
        font-weight: 600;
        border-radius: 100px;
        transition: all 0.4s ease;
    }

    .steps-cta:hover {
        background: #D4AF37;
        color: #0a0a0f;
        border-color: #D4AF37;
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.25);
    }

    .steps-cta svg {
        transition: transform 0.3s ease;
    }

    .steps-cta:hover svg {
        transform: translateX(-4px);
    }

    /* ══════════════════════════════════════════════════════════════
       RESPONSIVE
       ══════════════════════════════════════════════════════════════ */
    @@media (max-width: 768px) {
        .step-connector {
            display: none;
        }

        .steps-track {
            flex-direction: column;
            align-items: center;
        }

        .step-item {
            max-width: 100%;
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .hero {
            padding: 3rem 1.5rem;
        }

        .features,
        .steps-section {
            padding: 4rem 1.5rem;
        }
    }
</style>
}
