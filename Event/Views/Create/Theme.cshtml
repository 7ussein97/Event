        inset: 0;
        z-index: 0;
        overflow: hidden;
    }

    .bg-layer {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(ellipse 100% 50% at 50% 0%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
            radial-gradient(ellipse 80% 60% at 80% 100%, rgba(232, 180, 184, 0.05) 0%, transparent 40%),
            linear-gradient(180deg, #08080c 0%, #0c0a10 50%, #100d14 100%);
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        animation: orbDrift 25s ease-in-out infinite;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: rgba(212, 175, 55, 0.15);
        top: -15%;
        right: -10%;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: rgba(232, 180, 184, 0.1);
